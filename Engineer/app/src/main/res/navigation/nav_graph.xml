<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/homeFragment">

    <fragment android:id="@+id/loginFragment" android:name="com.monika.LoginFragment"
              tools:layout="@layout/fragment_login">
        <action android:id="@+id/action_loginFragment_to_registerFragment" app:destination="@id/registerFragment"/>
        <action android:id="@+id/action_loginFragment_to_homeFragment" app:destination="@id/homeFragment"/>
    </fragment>
    <fragment android:id="@+id/homeFragment" android:name="com.monika.HomeFragment"
              tools:layout="@layout/fragment_home">
        <action android:id="@+id/action_homeFragment_to_exercisesListFragment"
                app:destination="@id/exercisesListFragment"/>
    </fragment>
    <fragment android:id="@+id/registerFragment" android:name="com.monika.RegisterFragment"
              tools:layout="@layout/fragment_register"/>
    <fragment android:id="@+id/exerciseDetails" android:name="com.monika.ExerciseDetails"
              android:label="fragment_exercise_details" tools:layout="@layout/fragment_exercise_details"/>
    <fragment android:id="@+id/exercisesListFragment" android:name="com.monika.ExercisesListFragment"
              android:label="fragment_exercises_list" tools:layout="@layout/fragment_exercises_list">
        <action android:id="@+id/action_exercisesListFragment_to_exerciseDetails"
                app:destination="@id/exerciseDetails"/>
    </fragment>
</navigation>